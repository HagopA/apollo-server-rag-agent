# ==============================================
# Apollo Bot - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values

# --- Discord ---
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here          # Channel where bot listens (e.g., #ask-apollo)

# --- Anthropic (Claude) ---
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# --- Media Requests ---
MEDIA_REQUESTS_URL=http://your-server-ip:5055
MEDIA_REQUESTS_API_KEY=your_media_requests_api_key_here

# --- Movie Service ---
MOVIE_SERVICE_URL=http://your-server-ip:7878
MOVIE_SERVICE_API_KEY=your_movie_service_api_key_here

# --- TV Service ---
TV_SERVICE_URL=http://your-server-ip:8989
TV_SERVICE_API_KEY=your_tv_service_api_key_here

# --- Activity Monitor ---
ACTIVITY_SERVICE_URL=http://your-server-ip:8181
ACTIVITY_SERVICE_API_KEY=your_activity_service_api_key_here

# --- ChromaDB ---
CHROMA_PERSIST_DIR=./data/chromadb

# --- Bot Settings ---
BOT_NAME=Apollo Assistant
RATE_LIMIT_PER_USER=10          # Max messages per user per minute
MAX_CONVERSATION_HISTORY=10     # Messages to keep in thread context
