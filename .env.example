# ==============================================
# Apollo Bot - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values

# --- Discord ---
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here          # Channel where bot listens (e.g., #ask-apollo)

# --- Anthropic (Claude) ---
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# --- Seerr ---
SEERR_URL=http://your-unraid-ip:5055
SEERR_API_KEY=your_seerr_api_key_here

# --- Radarr ---
RADARR_URL=http://your-unraid-ip:7878
RADARR_API_KEY=your_radarr_api_key_here

# --- Sonarr ---
SONARR_URL=http://your-unraid-ip:8989
SONARR_API_KEY=your_sonarr_api_key_here

# --- Tautulli ---
TAUTULLI_URL=http://your-unraid-ip:8181
TAUTULLI_API_KEY=your_tautulli_api_key_here

# --- ChromaDB ---
CHROMA_PERSIST_DIR=./data/chromadb

# --- Bot Settings ---
BOT_NAME=Apollo Assistant
RATE_LIMIT_PER_USER=10          # Max messages per user per minute
MAX_CONVERSATION_HISTORY=10     # Messages to keep in thread context
